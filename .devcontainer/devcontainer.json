{
  "name": "Bun Development Container",
  "image": "ghcr.io/nhaef/devcontainer-bun:latest",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "vscode"
}
